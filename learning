#) Reimplementing largestProductOfThree

list = [2, 1, 3, 7, 3, 6, 1, 6,12, 3, -2, 5, -3, 1]

def largestProductOfThree(array):
    i = 0
    result = []
    while i < (len(list)-2):
        j = i+1
        while j < (len(list)-1):
            k = j+1
            while k < (len(list)):
                result.append(list[i] * list[j] * list[k])
                k+=1
            j+=1
        i +=1
    print(max(result))
        
        
largestProductOfThree(list)
